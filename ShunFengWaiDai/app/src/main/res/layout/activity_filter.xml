<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/select">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sort_tab"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/beige">
            <CheckBox
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="综合排序"
            android:drawableRight="@drawable/selector_stock_arrow"
            android:textColor="@drawable/selector_text_stock"
            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/gaodi_tab"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/beige">
            <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/gaodi"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="3dp"
            android:layout_gravity="center"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="从高到低"
            android:textSize="15dp"
            android:drawableRight="@drawable/selector_stock_arrow"
            android:textColor="@drawable/selector_text_stock"
            android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shaixuan"
            android:layout_gravity="center"
            android:text="筛选"
            android:background="@color/beige"
            android:textColor="@color/navy"
            android:layout_weight="0.6"
            android:drawableRight="@mipmap/ic_buttombar_3"/>

    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview">
    </ListView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/menu"
        android:background="@color/beige"
        android:orientation="vertical">
        <fragment
            android:id="@+id/fragment_filter"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:name="com.example.sfwd.shunfengwaidai.sun.FlterFragment"/>



    </LinearLayout>
</android.support.v4.widget.DrawerLayout>